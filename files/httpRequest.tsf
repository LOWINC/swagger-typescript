import { getRequest } from "./setHttpRequest";
import { service } from "service-name";

export const Http = {
  async getRequest(
    url: string,
    queryParams: any,
    requestBody: any,
  ): Promise<any> {
    return getRequest().get({
      url: service + url,
      queryParams: queryParams,
      requestBody: requestBody,
    });
  },
  async postRequest(
    url: string,
    queryParams: any,
    requestBody: any,
  ): Promise<any> {
    return getRequest().post({
      url: service + url,
      queryParams: queryParams,
      requestBody: requestBody,
    });
  },
  async putRequest(
    url: string,
    queryParams: any,
    requestBody: any,
  ): Promise<any> {
    return getRequest().put({
      url: service + url,
      queryParams: queryParams,
      requestBody: requestBody,
    });
  },
  async deleteRequest(
    url: string,
    queryParams: any,
    requestBody: any,
  ): Promise<any> {
    return getRequest().delete({
      url: service + url,
      queryParams: queryParams,
      requestBody: requestBody,
    });
  },
};
